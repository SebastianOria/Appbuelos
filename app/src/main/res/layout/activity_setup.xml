<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <include
        android:id="@+id/toolbar_setup"
        layout="@layout/toolbar_principal">

    </include>
    <EditText
        android:id="@+id/nombre_setup"
        android:layout_width="match_parent"
        android:background="@drawable/back"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_setup"
        android:padding="10dp"
        android:hint="Ingrese su nombre"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
    </EditText>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen_setup"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/nombre_setup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/foto"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"

        >

    </de.hdodenhof.circleimageview.CircleImageView>
    <Button
        android:id="@+id/bottom_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/celeste"
        android:layout_below="@+id/imagen_setup"
        android:padding="10dp"
        android:text="Guardar Informacion"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

    </Button>

</RelativeLayout>