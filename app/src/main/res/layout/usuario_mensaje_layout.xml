<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mensaje_image_perfil"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/foto">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/recibir_mensaje"
        android:layout_width="261dp"
        android:layout_height="91dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@id/mensaje_image_perfil"
        android:background="@drawable/recibir_mensaje_layout"
        android:padding="10dp"
        android:text="Recibir Mensaje"
        android:textSize="19dp"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:id="@+id/mensaje_enviar_imagen"
        android:layout_width="215dp"
        android:layout_height="165dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"

        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="7dp"
        android:scaleType="centerCrop"></ImageView>

    <ImageView
        android:id="@+id/mensaje_recibir_imagen"
        android:layout_width="148dp"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74dp"

        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"></ImageView>

    <ImageView
        android:id="@+id/mensaje_recibiraudio"
        android:layout_width="39dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"

        android:layout_marginTop="102dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/sonido"
        android:scaleType="centerCrop">

    </ImageView>

    <TextView
        android:id="@+id/enviar_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/enviar_mensaje_layout"
        android:padding="10dp"
        android:text="Enviar Mensaje Usuario"
        android:textColor="#ffffff"
        android:textSize="19dp"
        android:textStyle="bold" />

</RelativeLayout>